<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_standard_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="button_small_rounded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/less_rounded_button</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="Widget.Theme.WhereToEat.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.Theme.WhereToEat.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="text_style">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

</resources>